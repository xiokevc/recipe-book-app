<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Your Restaurant Reviews</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      background: #f4f4f4;
      line-height: 1.6;
      padding: 1rem;
    }

    a {
      color: #e07a5f;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    header.site-header {
      max-width: 1200px;
      margin: 0 auto 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      font-size: 2rem;
      color: #333;
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
    }

    nav a {
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .hero {
      text-align: center;
      margin: 2rem auto;
    }

    .hero h2 {
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .btn {
      background: #e07a5f;
      color: white;
      padding: 0.5rem 1.2rem;
      border: none;
      border-radius: 4px;
      font-weight: bold;
      text-transform: uppercase;
      cursor: pointer;
      transition: background 0.3s ease;
      display: inline-block;
    }

    .btn:hover {
      background: #c95d4d;
    }

    .add-new {
      text-align: center;
      margin: 2rem 0;
    }

    main#restaurants {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 2rem;
    }

    .card {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      overflow: hidden;
      display: flex;
      flex-direction: column;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.15);
    }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .card-body {
      padding: 1rem;
      flex-grow: 1;
    }

    .card-body h3 {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: #222;
    }

    .card-body p {
      font-size: 0.95rem;
      color: #555;
      margin-bottom: 0.4rem;
    }

    .card-actions {
      display: flex;
      justify-content: space-between;
      padding: 1rem;
      border-top: 1px solid #eee;
    }

    .card-actions form {
      display: inline;
    }

    .card-actions button {
      background: none;
      border: none;
      color: #d9534f;
      cursor: pointer;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
    }
  </style>
</head>
<body>

  <header class="site-header">
    <h1>Restaurant Reviews</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <% if (user) { %>
          <li><a href="/auth/sign-out">Sign Out</a></li>
        <% } else { %>
          <li><a href="/auth/sign-in">Sign In</a></li>
        <% } %>
      </ul>
    </nav>
  </header>

  <section class="hero">
    <h2>Welcome, <%= user ? user.email : 'Guest' %>!</h2>
    <a href="#restaurants" class="btn">View Your Reviews</a>
  </section>

  <% if (user) { %>
    <div class="add-new">
      <a href="/users/<%= user._id %>/restaurant/new" class="btn">+ Add New Restaurant</a>
    </div>
  <% } %>

  <main id="restaurants">
    <% if (!restaurants || restaurants.length === 0) { %>
      <p style="text-align:center; width: 100%;">No restaurant reviews yet. Start by adding one!</p>
    <% } else { %>
      <% restaurants.forEach(restaurant => { %>
        <article class="card">
          <img
            src="<%= restaurant.imageUrl && restaurant.imageUrl.trim() !== '' 
              ? restaurant.imageUrl 
              : 'https://source.unsplash.com/600x400/?restaurant,food,' + encodeURIComponent(restaurant.name) %>"
            alt="<%= restaurant.name %>"
            loading="lazy"
          />
          <div class="card-body">
            <h3><%= restaurant.name %></h3>
            <p><strong>Cuisine:</strong> <%= restaurant.cuisine || 'N/A' %></p>
            <p><strong>Location:</strong> <%= restaurant.location || 'N/A' %></p>
            <p><strong>Rating:</strong> <%= restaurant.averageRating?.toFixed(1) || '0.0' %> / 5</p>
          </div>
          <% if (user) { %>
            <div class="card-actions">
              <a href="/users/<%= user._id %>/restaurant/<%= restaurant._id %>/edit">Edit</a>
              <form action="/users/<%= user._id %>/restaurant/<%= restaurant._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this restaurant?');">
                <button type="submit">Delete</button>
              </form>
            </div>
          <% } %>
        </article>
      <% }) %>
    <% } %>
  </main>

</body>
</html>









